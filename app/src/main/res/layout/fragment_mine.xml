<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"

        android:orientation="horizontal"
        android:gravity="left|center_vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_icon"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/default_icon"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:riv_mutate_background="true"
            app:riv_corner_radius_top_right="25dp"
            app:riv_corner_radius_bottom_left="25dp"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的昵称"
                android:textColor="@color/TextPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_my_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="个性签名"
                android:textColor="@color/TextLight"
                android:maxLines="3"
                android:maxEms="20"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_my_collect"
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_my_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textColor="@color/TextPrimary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_collect"
                android:text="显示我的收藏搭配"
                android:textColor="@color/TextLight"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Divider" />

        <RelativeLayout
            android:id="@+id/rl_my_publish"
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_my_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的发布"
                android:textColor="@color/TextPrimary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_publish"
                android:text="显示我发布的搭配"
                android:textColor="@color/TextLight"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Divider" />

        <RelativeLayout
            android:id="@+id/rl_my_subscribe"
            style="@style/MyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_my_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:textColor="@color/TextPrimary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_subscribe"
                android:text="显示我关注的作者"
                android:textColor="@color/TextLight"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Divider" />
        <!--start 我的发布-->
    </LinearLayout>
</FrameLayout>