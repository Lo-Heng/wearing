<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_blooth_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

<ImageView
    android:id="@+id/iv_body"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:src="@drawable/lady"
    android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/iv_cap"
        android:layout_width="300dp"
        android:layout_height="86dp"
        android:paddingRight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cap2" />

    <ImageView
        android:id="@+id/iv_trousers"
        android:layout_width="300dp"
        android:layout_height="245dp"
        android:layout_marginTop="305dp"
        android:paddingRight="121dp"
        android:paddingLeft="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/trousers1" />
    <ImageView
        android:id="@+id/iv_shirt"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginTop="160dp"
        android:paddingRight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shirt1" />
    <ImageView
        android:id="@+id/iv_shoes"
        android:layout_gravity="bottom"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shoes1" />
</FrameLayout>