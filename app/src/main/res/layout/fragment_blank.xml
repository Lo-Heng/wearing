<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_blooth_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/background"
    android:scaleType="centerCrop"
    android:foreground="@color/transBlack"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_contain_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="#aaffffff"
        >

        <LinearLayout
            android:id="@+id/ll_contain_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/et_publish_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="bottom"
                android:hint="标题"
                android:background="@drawable/input_bg"/>

            <EditText
                android:id="@+id/et_publish_summarize"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:minLines="3"
                android:background="@drawable/input_bg"
                android:hint="摘要"
                android:gravity="bottom" />

            <ImageView
                android:id="@+id/iv_publish_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/plus_bg"
                android:background="@drawable/input_bg"
                android:layout_weight="3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>