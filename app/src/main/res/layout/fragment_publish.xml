<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_blooth_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/reg_bg"
    android:scaleType="centerCrop"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_contain_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        app:cardCornerRadius="5dp"
        android:translationZ="10dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="#aaffffff"
        >

        <LinearLayout
            android:id="@+id/ll_contain_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/et_publish_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="bottom"
                android:hint="标题"
                android:background="@drawable/input_bg"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/et_publish_summarize"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:minLines="3"
                android:padding="10dp"
                android:background="@drawable/input_bg"
                android:hint="摘要"
                android:gravity="bottom" />

            <ImageView
                android:id="@+id/iv_publish_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/plus_bg"
                android:background="@drawable/input_bg"
                android:layout_weight="3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_publish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Button_Light"

                    android:text="@string/title_publish"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>